extends layout

block content
  .content.pure-g-r
    .header.pure-u-1
      include menu

    if locals.user
      .main.pure-u-1
        .pure-g-r
          .pure-u-1-2
            img(src='/images/grave.jpg')
            .list


          .pure-u-1-2
            .grave
              .head
                p.title #{name} さんのお墓
              .offerings
                if offerings
                  p.label-offerings お供え物
                  each offering in offerings
                    case offering
                      when 'flower'
                        img.offering(src='/images/bukka.gif', name='flower')
                      when 'senkou'
                        img.offering(src='/images/senkou.jpg', name='senkou')
              .make-offerings
                a.pure-button.submit(data-user=name) お供え物をする
                span.error
                //- br
                .offering-types
                  .offering
                    img(src='/images/bukka.gif', name='flower')
                    .label
                      span お花
                  .offering
                    img(src='/images/senkou.jpg', name='senkou')
                    .label
                      span 線香
    else
      .main.pure-u-1
        .pure-g-r
          .pure-u-1-2
            img(src='/images/grave.jpg')